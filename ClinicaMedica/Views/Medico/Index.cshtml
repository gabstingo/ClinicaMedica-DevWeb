@model IEnumerable<Consulta>;

<h1>Atendimentos do dia</h1>

@if (TempData["TipoMensagem"] != null)
{
    if (TempData["TipoMensagem"].ToString() == "SUCESSO")
    {
<div class="alert alert-success">@TempData["Mensagem"].ToString()</div> }
                else if (TempData["TipoMensagem"].ToString() == "ERRO")
                {
<div class="alert alert-danger">@TempData["Mensagem"].ToString()</div>}
            }

<form method="post">
    <div class="form-group">
        <label for="txtAtivo">Status:</label><br />

        <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" name="Situacao" id="inlineRadio1b" value="Pendente">
            <label class="form-check-label" for="inlineRadio1b">Pendente</label>
        </div>
        <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" name="Situacao" id="inlineRadio3b" value="Cancelada">
            <label class="form-check-label" for="inlineRadio3b">Cancelada</label>
        </div>
        <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" name="Situacao" id="inlineRadio3b" value="Concluida">
            <label class="form-check-label" for="inlineRadio3b">Concluida</label>
        </div>
        <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" name="Ativo" id="inlineRadio3b" value="">
            <label class="form-check-label" for="inlineRadio3b">Todas</label>
        </div>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Pesquisar</button>
    </div>
</form>

<div class="container">
    <div class="row">
        <div class="col-sm">
            @Html.DisplayNameFor(model => model.NomePaciente)
        </div>
        <div class="col-sm">
            @Html.DisplayNameFor(model => model.Cpf)
        </div>
        <div class="col-sm">
            @Html.DisplayNameFor(model => model.dataConsulta)
        </div>
        <div class="col-sm text-center">
            @Html.DisplayNameFor(model => model.Situacao)
        </div>
        <div class="col-sm-1">
            Acessar
        </div>
    </div>


    @if (Model != null)
    {
        @foreach (Consulta usuario in Model)
        {

            <div class="row">
                <div class="col-sm">
                    @usuario.NomePaciente
                </div>
                <div class="col-sm">
                    @usuario.Cpf
                </div>
                <div class="col-sm">
                    @usuario.dataConsulta
                </div>
                <div class="col-sm text-center">
                    @usuario.Situacao
                </div>
                <div class="col-sm-1 ">
                    <a class="btn btn-sm btn-secondary" asp-action="Anotacoes" asp-route-id="@usuario.ID">Editar</a>
                </div>
            </div>

        }
    }
</div>